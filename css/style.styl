    background-image: -o-linear-gradient(top,  rgba(30,87,153,1) 0%,rgba(16,64,102,1) 100%); /* Opera 11.10+ */
    background-image: -ms-linear-gradient(top,  rgba(30,87,153,1) 0%,rgba(16,64,102,1) 100%); /* IE10+ */
